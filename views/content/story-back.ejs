<%- include('../partials/header'); %>

<div class="container">
  <h1>Index page</h1>
  <!-- https://www.w3schools.com/howto/howto_js_slideshow.asp -->
  <div class="row">
    <div class="col-md-2">
      <nav>
        <ul class="nav">
          <% categories.forEach((category) => { %>
          <li>
            <a href="/content/stories/<%= category.id %>">
              <%= category.label %></a
            >
          </li>

          <% });%>
        </ul>
      </nav>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col">
          <div class="slide">
            <% if(story.media.length > 0){ %>
            <!-- <img src="<%= story.media[0].thumbnail %>" class="responsive" width="300px;" /> -->
            <% story.media.forEach((img) => { %>

            <!-- Slideshow container -->
            <div class="slideshow-container">
              <!-- Full-width images with number and caption text -->
              <div class="mySlides fade">
                <div class="numbertext">1 / 3</div>
                <img
                  src="<%= img.thumbnail %>"
                  class="responsive"
                  width="100%;"
                />
                <div class="text">Caption Text</div>
              </div>

              <% } ) %> <% } %>

              <!-- Next and previous buttons -->
              <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
              <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br />
            <!-- The dots/circles -->
            <div style="text-align: center">
              <% story.media.forEach((img, index) => { %>
              <span class="dot" onclick="currentSlide('<%= index %>')"></span>
              <!-- <span class="dot" onclick="currentSlide(2)"></span>
  <span class="dot" onclick="currentSlide(3)"></span> -->
              <%}) %>
            </div>
          </div>
          <div><h1><%= story.title; %></h1></div>

          <p><%- story.content; %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer');%>
